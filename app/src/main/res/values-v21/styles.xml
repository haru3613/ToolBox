<resources>

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/primaryDarkColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:textColorSecondaryInverse">@color/primaryDarkColor</item>
        <item name="android:windowBackground">?android:attr/colorBackground</item>
        <item name="android:textColorPrimaryInverse">@color/primaryDarkColor</item>
        <item name="android:textColorSecondary">@color/primaryDarkColor</item>
        <item name="android:colorForeground">@color/colorBackground</item>
        <item name="colorButtonNormal">@color/primaryDarkColor</item>
        <item name="android:timePickerDialogTheme">@style/myTimePickerStyle</item>
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/primaryDarkColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:gravity">center</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="myTimePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:numbersTextColor">#ffffff</item>
        <item name="android:numbersBackgroundColor">@color/primaryColor</item>
        <item name="android:numbersSelectorColor">@color/primaryTextColor</item>
        <item name="android:headerBackground">@color/primaryDarkColor</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/black</item>
    </style>
</resources>
