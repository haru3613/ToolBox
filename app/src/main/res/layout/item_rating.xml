<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp">

    <ImageView
        android:id="@+id/item_rating_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="10dp"
        app:srcCompat="@drawable/debug" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <TextView
            android:id="@+id/item_rating_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:textColor="@color/primaryTextColor"
            android:textSize="20sp" />

        <RatingBar
            android:id="@+id/item_rating_ratingbar"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:numStars="5"
            android:rating="3.0"
            android:stepSize="1.0" />

        <TextView
            android:id="@+id/item_rating_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Do the right thing"
            android:textColor="@color/primaryColor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/item_rating_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10/28 2018"
            android:textColor="@color/grayColor"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>