<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootView"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.cyut.toolbox.toolbox.SignUpActivity"
    tools:showIn="@layout/activity_sign_up">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="25dp">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:paddingBottom="30dp"
                app:srcCompat="@drawable/ic_logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="30dp">

                <com.rey.material.widget.Button
                    android:id="@+id/uploadimg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="80dp"
                    android:background="@color/primaryDarkColor"
                    android:text="選擇圖片"
                    android:textColor="@android:color/white"
                    app:rd_enable="true" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageview"
                    android:layout_width="104dp"
                    android:layout_height="104dp"
                    android:layout_gravity="right"
                    android:src="@drawable/sign_pic" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="10dp">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/mailText"
                    android:layout_width="198dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="輸入您的學號"
                    android:inputType="text"
                    android:singleLine="false"
                    android:textSize="15sp"
                    app:met_floatingLabel="normal"
                    app:met_iconLeft="@drawable/ui_mail" />

                <Spinner
                    android:id="@+id/spinner_login"
                    android:layout_width="198dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/primaryDarkColor" />
            </LinearLayout>


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="輸入您的密碼"
                android:inputType="textPassword"
                android:paddingBottom="10dp"
                app:met_floatingLabel="normal"
                android:singleLine="false"
                android:textSize="15sp"
                app:met_iconLeft="@drawable/ui_pwd" />


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/re_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="再輸入一次您的密碼"
                app:met_floatingLabel="normal"
                android:inputType="textPassword"
                android:singleLine="false"
                android:paddingBottom="10dp"
                android:textSize="15sp"
                app:met_iconLeft="@drawable/ui_pwd" />


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="輸入您的姓名"
                android:inputType="textPersonName"
                app:met_floatingLabel="normal"
                android:singleLine="false"
                android:paddingBottom="10dp"
                android:textSize="15sp"
                app:met_iconLeft="@drawable/ui_name" />


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="輸入您的暱稱"
                android:inputType="textPersonName"
                app:met_floatingLabel="normal"
                android:singleLine="false"
                android:paddingBottom="10dp"
                android:textSize="15sp"
                app:met_iconLeft="@drawable/ui_nickname" />


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="輸入您的手機號碼"
                android:inputType="phone"
                android:singleLine="false"
                app:met_floatingLabel="normal"
                android:paddingBottom="10dp"
                android:textSize="15sp"
                app:met_iconLeft="@drawable/ui_phone" />


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/pid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="輸入您的身分證"
                android:inputType="text"
                android:singleLine="false"
                app:met_floatingLabel="normal"
                android:paddingBottom="10dp"
                android:textSize="15sp"
                app:met_iconLeft="@drawable/ui_identity" />


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="輸入您的地址"
                android:inputType="textPersonName"
                app:met_floatingLabel="normal"
                android:singleLine="false"
                android:paddingBottom="10dp"
                android:textSize="15sp"
                app:met_iconLeft="@drawable/ui_address" />




            <ProgressBar
                android:id="@+id/progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor=" @android:color/black"
                    android:text="我已經閱讀並同意" />

                <TextView
                    android:id="@+id/UseStatement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="使用聲明"
                    android:textColor="@android:color/holo_blue_dark" />
            </LinearLayout>

            <com.rey.material.widget.Button
                android:id="@+id/sign"
                android:layout_width="308dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:onClick="signUpp"
                android:background="@color/primaryDarkColor"
                android:textColor="@android:color/white"
                android:text="註冊成為工具人"
                android:textSize="20sp"
                app:rd_enable="true" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/sign_bot" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="69dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/login_bot" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="68dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/login_bot_right" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
